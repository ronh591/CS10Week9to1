#include <iostream>
#include <string>
using namespace std;
int main()
{
 string myStr;
  char myChar = 'y';
  char myCharArray[2];
  //convert char to Cstring
  myCharArray[0] = myChar;
  myCharArray[1] = '\0';

 myStr = string(myCharArray);
 cout << myStr << endl;
 cout << myStr[2] << endl;
 cout << myStr[1];
 string myStr1;
 char myChar1 = 'z';
 myStr1 = string(1, myChar1);/*This creates a string of length 1 stored in myStr 
 whose
 only char is myChar.*/
 cout << myStr1;
/*y
P
z */
}
