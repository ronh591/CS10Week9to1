#include <string>
#include <iostream>
using namespace std;
int main() {
string answer;
string summary = " ";
int k = 1;
do {
  std::cout << "Enter A,B,C or D for question " << k << ":";
  std:: cin >> answer;
  summary = summary + " " + answer;
  k++;
}while (k <= 10); 
std::cout << " = "<< summary << std::endl;
}
/*Enter A,B,C or D for question 1:A
Enter A,B,C or D for question 2:B
Enter A,B,C or D for question 3:C
