// Example program
#include <iostream>
#include <string>

int main()
{int i = 0;
while (i < 5) {
  std::cout << i << " : " << "As we know, the while loop loops through a block of code as long as a specified condition is true.  "<< "\n";
  std::cout << i << " : " << "(navigator.userAgent.match(/(MSIE|Trident\/)/))" << std::endl;
  i++;
}
}
